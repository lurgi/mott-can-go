generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Place {
  id        Int      @id @default(autoincrement())
  like      Int      @default(0)
  name      String
  latitude       Int
  longitude       Int
  address String
  types  PlaceType[]
  naverId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PlaceType{
  id        Int      @id @default(autoincrement())
  type String
  places Place @relation(fields: [placeId], references: [id], onDelete: Cascade)
  placeId Int
   createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([placeId])
}
